{% extends 'base.html.twig' %}

{% block title %}SymfonyPress | Catégorie : {{category.name}}{% endblock %}

{% block body %}
<nav aria-label="Fil d’Ariane">
        <ul>
            <li aria-current="page">Catégorie : {{ category.name }}</li>
        </ul>
    </nav>

    <header>
        <h1>Catégorie : {{ category.name }}</h1>
    </header>

    <section aria-labelledby="articles-title">
        <h2 id="articles-title">Articles associés</h2>

        <ul aria-label="Articles de la catégorie {{ category.name }}">
            {% for article in articles %}
                <li>
                    {% include 'components/article_card.html.twig' with { article: article } only %}
                </li>
            {% else %}
                <li role="alert">Aucun article dans cette catégorie.</li>
            {% endfor %}
        </ul>
    </section>

    <p><a href="{{ path('home') }}">← Retour à l’accueil</a></p>

{% endblock %}
