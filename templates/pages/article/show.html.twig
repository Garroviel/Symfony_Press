{% extends 'base.html.twig' %}

{% block title %}SymfonyPress | {{article.title}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <nav aria-label="Fil d’Ariane">
        <ul>
            <li aria-current="page">{{ article.title }}</li>
        </ul>
    </nav>

    <article>
        <header>
            <h1>{{ article.title }}</h1>

            <p>
                <time datetime="{{ article.createdAt|date('c') }}">
                    {{ article.createdAt|date('d/m/Y') }}
                </time>
                <span aria-hidden="true"> • </span>
                <a href="{{ path('category_show', { slug: article.category.slug }) }}">
                    {{ article.category.name }}
                </a>
            </p>
        </header>

        <section aria-label="Contenu de l’article">
            <p>{{ article.content }}</p>
        </section>
    </article>

	<p><a href="{{ path('home') }}">← Retour à l’accueil</a></p>
{% endblock %}
