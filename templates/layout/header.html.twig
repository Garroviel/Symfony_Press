<header class="site-header">
    <div class="site-header__inner container">
        <a class="brand" href="{{ path('home') }}">SymfonyPress</a>

		{% if app.user %}
			<form method="post" action="{{ path('app_logout') }}" style="display:inline">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
				<button class="btn" type="submit">DÃ©connexion</button>
			</form>
		{% else %}
			<a class="btn" href="{{ path('app_login') }}">Connexion</a>
		{% endif %}

        <nav class="nav" aria-label="Navigation principale">
            <ul>
                <li>
                    <a href="{{ path('admin_article_index') }}" {% if app.request.attributes.get('_route') starts with 'admin_article_' %}aria-current="page"{% endif %}>
                        {% if is_granted('ROLE_ADMIN')%}
							Admin
						{% else %}
							Mes articles
						{% endif %}
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>
